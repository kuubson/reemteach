{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "./src",
        "paths": {
            "@redux/*": ["redux/store/*"],
            "@styles/*": ["assets/styles/*"],
            "@animations/*": ["animations/*"],
            "@images/*": ["images/*"],
            "@hoc/*": ["hoc/*"],
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "exclude": ["node_modules", "build"]
}
